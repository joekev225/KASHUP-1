model Withdrawal {
  id          String   @id @default(cuid())
  amount      Float
  status      String
  date        DateTime @default(now())
  bankAccount String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

enum UserRole {
  USER
  ADMIN
}